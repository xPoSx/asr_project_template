{
  "name": "quartznet_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [
      {
        "type": "Gain",
        "args": {}
      },
      {
        "type": "Noise",
        "args": {
          "sample_rate": 16000
        }
      },
      {
        "type": "Pitch",
        "args": {
          "sample_rate" : 16000
        }
      }
    ],
    "spectrogram": [
      {
        "type": "FrequencyMasking",
        "args": {
          "freq_mask_param": 20
        }
      },
      {
        "type": "TimeMasking",
        "args": {
          "time_mask_param": 40
        }
      }
    ]
  },
  "arch": {
    "type": "QuartzNet",
    "args": {
      "n_feats": 128
    }
  },
  "data": {
    "train": {
      "batch_sampler": {
          "type": "GroupLengthBatchSampler",
          "args": {
              "batch_size": 32,
              "batches_per_group": 20
          }
      },
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 300
          }
        }
      ]
    },
    "val": {
      "batch_size": 32,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "NovoGrad",
    "args": {
      "lr": 1e-2,
      "betas": [0.9, 0.5],
      "weight_decay": 1e-3
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "BeamWERMetric",
      "args": {
        "name": "Beam WER"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    },
    {
      "type": "BeamCERMetric",
      "args": {
        "name": "Beam CER"
      }
    }
  ],
  "lr_scheduler": {
    "type": "CosineAnnealingLR",
    "args": {
      "T_max": 20000
    }
  },
  "trainer": {
    "epochs": 20,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 300,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 1000,
    "grad_norm_clip": 10
  }
}