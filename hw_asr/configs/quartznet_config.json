{
  "name": "lstm_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "QuartzNet",
    "args": {
      "n_feats": 128
    }
  },
  "data": {
    "train": {
      "batch_sampler": {
          "type": "GroupLengthBatchSampler",
          "args": {
              "batch_size": 32,
              "batches_per_group": 10
          }
      },
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 64,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 5.0,
            "max_text_length": 50,
            "limit": 64
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "NovoGrad",
    "args": {
      "lr": 1e-2,
      "betas": [0.9, 0.5],
      "weight_decay": 1e-3
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "CosineAnnealingLR",
    "args": {
      "T_max": 600
    }
  },
  "trainer": {
    "epochs": 600,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 300,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 1,
    "grad_norm_clip": 10
  }
}