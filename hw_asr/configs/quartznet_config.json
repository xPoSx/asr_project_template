{
  "name": "lstm_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "QuartzNet",
    "args": {
      "n_feats": 128
    }
  },
  "data": {
    "train": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit": 20
          }
        }
      ]
    },
    "val": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit": 20
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 2e-3
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 30,
      "epochs": 100,
      "anneal_strategy": "cos",
      "max_lr": 1e-1,
      "pct_start": 0.1
    }
  },
  "trainer": {
    "epochs": 40,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 20,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 30,
    "grad_norm_clip": 10
  }
}